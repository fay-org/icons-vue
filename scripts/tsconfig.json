{
  "compilerOptions": {
    "outDir": "../dist/types",
    "target": "esnext",
    "module": "commonjs",
    "importHelpers": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"]
    // "types": ["*", "../src/*.d.ts"]
  },
  "files": ["../packages/index.ts"],
  "include": ["../src/**/*.d.ts", "../packages/*.tsx"],
  "exclude": ["node_modules", "src/**/*"]
}
